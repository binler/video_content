<tr class="file_asset" id="<%=result['id']%>">
  <td>
    <%=link_to result[solr_name("title", :text)], external_asset_path(result["id"]) %>
  </td>
  <td>
    <%=result[solr_name("extent", :text)] %>
  </td>
  <td>
    <%=format_date(DateTime.parse(result[solr_name("system_create", :date)]))%>
  <td>
    <%- if editor? -%>
      <%- if @container.nil? -%>
        <%- file_asset_url = file_asset_path(result["id"]) -%>
      <%- else -%>
        <%- file_asset_url = asset_file_asset_path(@container.pid, result["id"]) -%>   
      <%- end -%>  
      <a class="destroy_file_asset" href="<%=file_asset_url%>", title="Remove file">Delete</a>
    <%- end -%>
  </td>
</tr>
