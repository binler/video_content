<% release = edit_release %>
<% release_counter = edit_release_counter %>
<% base_id = "release_#{release_counter}" %>

<li>
  <dl class="image_tag" id="<%= base_id %>">
      <dt>
        <%= fedora_field_label("descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreContributor, :contributor], "Contributor:") %>
      </dt>
      <dd class="contributor">
        <%= fedora_text_field(@document_fedora,"descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreContributor, :contributor]) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreContributor, :contributorRole], "Contributor Role:") %>
      </dt>
      <dd class="contributor_role">
        <%= fedora_text_field(@document_fedora,"descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreContributor, :contributorRole]) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreRightsSummary, :rightsSummary], "RightsSummary:") %>
      </dt>
      <dd class="rights_summary">
        <%= fedora_text_field(@document_fedora,"descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreRightsSummary, :rightsSummary]) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreRightsSummary, :rightsLink], "RightsLink:") %>
      </dt>
      <dd class="rights_link">
        <%= fedora_text_field(@document_fedora,"descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreRightsSummary, :rightsLink]) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreRightsSummary, :rightsEmbedded], "RightsEmbedded:") %>
      </dt>
      <dd class="rights_embedded">
        <%= fedora_text_field(@document_fedora,"descMetadata", [:pbcoreDescriptionDocument, {:pbcorePart => release_counter}, :pbcoreRightsSummary, :rightsEmbedded]) %>
      </dd>
    </ul>
    <% if ( (params[:action] == "edit" || params[:action] == "create")) %>
        <%= field_selectors_for("descMetadata", [{:creator=>release_counter}]) %>  
	<%= link_to("", url_for(:action => "removecreator", :controller => "events", :creator_counter=>release_counter), :class => "destructive destroy_image") %>
    <% end %>
  </dl>
</li>
<hr/>
