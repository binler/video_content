<% creator = edit_creator %>
<% creator_counter = edit_creator_counter %>
<% base_id = "creator_#{creator_counter}" %>

<li>
  <dl class="image_tag" id="<%= base_id %>">
    <ul>
      <dt>
        <%= fedora_field_label("descMetadata", [:pbcoreDescriptionDocument, {:pbcoreCreator => creator_counter}, :creator], "Company Name:") %>
      </dt>
      <dd class="creator">
        <%= fedora_text_field(@document_fedora,"descMetadata", [:pbcoreDescriptionDocument, {:pbcoreCreator => creator_counter}, :creator]) %>
      </dd>
    </ul>
    <% if ( (params[:action] == "edit" || params[:action] == "create")) %>
        <%= field_selectors_for("descMetadata", [{:creator=>creator_counter}]) %>  
	<%= link_to("", url_for(:action => "removecreator", :controller => "events", :creator_counter=>creator_counter), :class => "destructive destroy_image") %>
    <% end %>
  </dl>
</li>
<hr/>
